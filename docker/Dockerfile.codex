# Codex-ready container for Filare agents
# Install tooling: uv, gh, git, rg, fd, jq, yq, just, Graphviz, Node/npm, Playwright/Chromium, mermaid-cli

FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      ca-certificates \
      curl \
      git \
      graphviz \
      python3 python3-venv python3-pip \
      ripgrep \
      fd-find \
      jq \
      yq \
      just \
      tmux \
      neovim \
      npm \
      fonts-dejavu-core fonts-liberation \
      libnss3 libatk1.0-0 libatk-bridge2.0-0 libcups2 libdrm2 libgbm1 libasound2t64 libxkbcommon0 libxcomposite1 libxdamage1 libxfixes3 libxrandr2 libgtk-3-0 \
      git-lfs \
    && ln -sf /usr/bin/fdfind /usr/local/bin/fd \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:${PATH}"

# Install mermaid-cli and Playwright/Chromium
RUN npm install --global @mermaid-js/mermaid-cli playwright && \
    npx playwright install chromium --with-deps

# Create a non-root workspace/home location; actual UID/GID supplied at runtime via --user
RUN mkdir -p /home/agent/workspace && chown -R 1000:1000 /home/agent
WORKDIR /home/agent/workspace

# Default command opens a shell; run with --user $(id -u):$(id -g) and bind mount repo to /home/agent/workspace
CMD ["/bin/bash"]
